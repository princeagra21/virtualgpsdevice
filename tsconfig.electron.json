{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["app/electron/**/*", "db/**/*"],
  "exclude": ["node_modules", "dist", "app/renderer", "app/page.tsx", "app/layout.tsx", "app/globals.css", "app/lib"]
}

